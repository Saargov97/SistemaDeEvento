<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ui.inscricao.InscricaoFragment">

    <!-- TODO: Update blank fragment layout -->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvNomEvento"
        style="@style/TextAppearance.MaterialComponents.Headline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Evento: " />

    <Button
        android:id="@+id/inscBtnLista"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Inscrições">
    </Button>

    <Button
        android:id="@+id/inscBtnQRCode"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Ler QRCode"
        android:enabled="false">
    </Button>

    <Button
        android:id="@+id/inscBtnNewInscricao"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Nova incrição"
        android:enabled="false">
    </Button>

</androidx.appcompat.widget.LinearLayoutCompat>